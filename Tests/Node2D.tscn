code = "shader_type canvas_item;


uniform float speed;
uniform float wave_length;
uniform float length_increase;
uniform float amplitude;
uniform float amplitude_decrease;

uniform vec2 scale;

void fragment()
{
	float time = mod(TIME, 5.0);
	float current_length = wave_length + time*length_increase;
	float current_amplitude = pow(amplitude, -time*amplitude_decrease);
	
	vec2 pos = UV - vec2(0.5,0.5);
	pos.x *= scale.x;
	pos.y *= scale.y;
	float wave_pos = length(pos) - time*speed;
	
	if (wave_pos >= 0.0 && wave_pos <= current_length)
	{
		vec2 dir = normalize(pos);
		float x = wave_pos/current_length;
		float const = 3.14/current_length;
		
		vec2 mod_uv = dir*current_length*(x - current_amplitude*sin(x*3.1415)/3.1415);
		mod_uv.x /= scale.x;
		mod_uv.y /= scale.y;
		
		COLOR = texture(SCREEN_TEXTURE, SCREEN_UV + mod_uv);
	}
	else
	{
		COLOR = texture(SCREEN_TEXTURE, SCREEN_UV)
	}
}
"

